{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules", ".vscode-js-debug", ".direnv", "./biome.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noVar": "off",
        "useConst": "off",
        "useSingleVarDeclarator": "off",
        "useNumberNamespace": "off",
        "useTemplate": "off",
        "useExponentiationOperator": "off"
      },
      "correctness": {
        "noConstantCondition": "off",
        "noInnerDeclarations": "off",
        "noInvalidUseBeforeDeclaration": "off"
      },
      "suspicious": {
        "noRedeclare": "off",
        "noDoubleEquals": "off",
        "noSelfCompare": "off",
        "noGlobalIsNan": "off"
      },
      "complexity": {
        "noUselessLoneBlockStatements": "off",
        "useArrowFunction": "off",
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
